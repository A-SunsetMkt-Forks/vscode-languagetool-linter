{
  "name": "languagetool-linter",
  "displayName": "LanguageTool Linter",
  "description": "LanguageTool integration for VS Code.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.38.0"
  },
  "categories": [
    "Linters"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "languagetool-linter",
      "properties": {
        "languagetool-linter.language": {
          "type": "string",
          "default": "auto",
          "description": "The language LanguageTool should check against"
        },
        "languagetool-linter.motherTongue": {
          "type": "string",
          "default": "",
          "description": "The language LanguageTool should check against"
        },
        "languagetool-linter.preferredVariants": {
          "type": "string",
          "default": "",
          "description": ""
        },
        "languagetool-linter.disabledCategories": {
          "type": "string",
          "default": "",
          "description": ""
        },
        "languagetool-linter.disabledRules": {
          "type": "string",
          "default": "-",
          "description": ""
        },
        "languagetool-linter.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Allow to enable languageTool on specific workspaces"
        },
        "languagetool-linter.publicFallback": {
          "type": "boolean",
          "default": false,
          "description": "Fallback to the public LanguageTool API Service."
        },
        "languagetool-linter.fallbackServerUrl": {
          "type": "string",
          "default": "https://languagetool.org/api/",
          "description": "URL of public LanguageTool server to use in fallback mode."
        },
        "languagetool-linter.serverUrl": {
          "type": "string",
          "default": "",
          "description": "URL of LanguageTool server or the path to your local languagetool-server.jar."
        },
        "languagetool-linter.localPort": {
          "type": "integer",
          "default": "8081",
          "description": "Port for local LanguageTool service."
        },
        "languagetool-linter.manageLocalServce": {
          "type": "boolean",
          "default": false,
          "description": "Start and stop the LanguageTool service."
        },
        "languagetool-linter.localConfig": {
          "type": "string",
          "default": "",
          "description": "Path to a config file for the local LanguageTool service."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^5.2.6",
    "@types/node": "^10.12.21",
    "@types/vscode": "^1.38.0",
    "glob": "^7.1.4",
    "mocha": "^6.1.4",
    "typescript": "^3.3.1",
    "tslint": "^5.12.1",
    "vscode-test": "^1.2.0"
  },
  "dependencies": {
    "@types/request-promise-native": "^1.0.16",
    "annotatedtext-remark": "^0.1.0",
    "request": "^2.83.0",
    "request-promise-native": "^1.0.5"
  }
}
